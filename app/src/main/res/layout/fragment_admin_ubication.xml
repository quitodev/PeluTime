<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.main.admin.ubication.AdminUbicationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/layoutUbication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#D6D6D6"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Datos del local"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardImage"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="15dp"
                        android:visibility="invisible"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:id="@+id/imageUbication"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/layoutChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_change"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Cambiar imagen"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Nombre"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingrese un nombre"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector"
                        android:textSize="18sp"
                        tools:text="Nombre del local"
                        tools:ignore="AutoFill,HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Dirección"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editAddress"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingrese una dirección"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector"
                        android:textSize="18sp"
                        tools:text="Dirección del local"
                        tools:ignore="AutoFill,HardcodedText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Horarios"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editSchedule"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingrese un horario"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector"
                        android:textSize="18sp"
                        tools:text="Horarios del local"
                        tools:ignore="AutoFill,HardcodedText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Teléfono"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editPhone"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingrese un teléfono"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        tools:text="Teléfono del local"
                        tools:ignore="AutoFill,HardcodedText,TextFields"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Sitio Web"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editWebsite"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingrese un sitio web"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        tools:text="Sitio del local"
                        tools:ignore="AutoFill,HardcodedText"/>

                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="70dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="25dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardModify"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:visibility="visible"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="4dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="MODIFICAR"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                tools:ignore="HardcodedText" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardSave"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="4dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="GUARDAR"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                tools:ignore="HardcodedText" />
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_dialog_ok" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/colorPrimaryDark"/>
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/imageClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_close"/>
    </RelativeLayout>

</FrameLayout>